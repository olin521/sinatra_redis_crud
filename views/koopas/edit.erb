<div>
<form action="/koopas/<%= @koopa["id"] %>" method="POST" id="form">
	
	<label for="edit_name">Name</label>
	<input type="text" name="name" placeholder="edit name" id="new_koopa_name" value="<%= @koopa["name"] %>">
	<br />

	<labe for="edit_Has_Shell?">Has Shell?</label>
	<label for="has_yes">Yes</label>
	<input type="radio" name="has_shell" value="does-have-shell" id="has_yes" checked />

	<label for="edit_shell_no">No</label>
	<input type="radio" name="has_shell" value="has-no-shell" id="shell_no" />
	</label>

	<br />

	 <label>Edit Color:</label>
     <input type 	= "checkbox"
            name 	= "color"
             id   	= "color"
          	value 	= "red" />
     <label for = "red">red</label>

     <input type 	= "checkbox"
            name 	= "color"
             id   	= "color"
          	value 	= "green"/>
     <label for = "green">green</label>

    <input type 	= "checkbox"
            name 	= "color"
             id   	= "color"
          	value 	= "mauve" />
     <label for = "mauve">mauve</label>

     <input type 	= "checkbox"
            name 	= "color"
             id   	= "color"
          	value 	= "blue" />
     <label for = "blue">blue</label>

     <br />

    <label for="edit_koopa_pic">Edit Pic</label>
	<input type="text" name="photo_url" placeholder="photo-url" id="edit_koopa_pic" value="<%= @koopa["photo_url"] %>">

	<br />

<!-- inserting method override -->
	<input type="hidden" name="_method" value="PUT">
	<input type="submit" value="Edit">
</form>
            
</div>

<!-- to make the form 'sticky' add values with instance variables set to existing db values.
If method override isn't inserted app will look for a POST route but this is defined with a PUT to update the db.-->
